@model BreadBuilder.ViewModels.AddBreadViewModel

@{
    ViewData["Title"] = "Add";
}



<h2>Add a Bread!</h2>


<hr />
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-default" onclick="addInput()" value="Add">Add Ingredient</button>
    
        <button class="btn btn-default" onclick="removeInput()" value="Remove">Remove Ingredient</button>
    </div>
</div>
<br/>
<br/>

<form asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <br />
  
    
    <div id="wrapper">



        <div class="row">
            <div class="col-md-2">
                <label asp-for="RecipeItems[0].RecipeIngredient.Name">Ingredient</label>
                <input asp-for="RecipeItems[0].RecipeIngredient.Name" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[0].RecipeMeasurement.Value">Quantity</label>
                <input asp-for="RecipeItems[0].RecipeMeasurement.Value" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[0].RecipeMeasurement.Unit">Unit</label>
                <select asp-for="RecipeItems[0].RecipeMeasurement.Unit" asp-items="Model.MeasurementUnits" class="dropdown"></select>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="RecipeItems[1].RecipeIngredient.Name">Ingredient</label>
                <input asp-for="RecipeItems[1].RecipeIngredient.Name" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[1].RecipeMeasurement.Value">Quantity</label>
                <input asp-for="RecipeItems[1].RecipeMeasurement.Value" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[1].RecipeMeasurement.Unit">Unit</label>
                <select asp-for="RecipeItems[1].RecipeMeasurement.Unit" asp-items="Model.MeasurementUnits" class="dropdown"></select>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="RecipeItems[2].RecipeIngredient.Name">Ingredient</label>
                <input asp-for="RecipeItems[2].RecipeIngredient.Name" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[2].RecipeMeasurement.Value">Quantity</label>
                <input asp-for="RecipeItems[2].RecipeMeasurement.Value" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[2].RecipeMeasurement.Unit">Unit</label>
                <select asp-for="RecipeItems[2].RecipeMeasurement.Unit" asp-items="Model.MeasurementUnits" class="dropdown"></select>
            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="RecipeItems[3].RecipeIngredient.Name">Ingredient</label>
                <input asp-for="RecipeItems[3].RecipeIngredient.Name" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[3].RecipeMeasurement.Value">Quantity</label>
                <input asp-for="RecipeItems[3].RecipeMeasurement.Value" class="form-control" />
            </div>
            <div class="col-md-1">
                <label asp-for="RecipeItems[3].RecipeMeasurement.Unit">Unit</label>
                <select asp-for="RecipeItems[3].RecipeMeasurement.Unit" asp-items="Model.MeasurementUnits" class="dropdown"></select>
            </div>
            <br />
        </div>



    </div>


    <br />
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Instructions" class="control-label"></label>
            <textarea rows="20" cols="50" asp-for="Instructions" class="form-control"></textarea>
            <span asp-validation-for="Instructions" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" asp-action="Add" value="Build" class="btn btn-default" />
    </div>
</form>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

