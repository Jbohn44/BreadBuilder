@model BreadBuilder.ViewModels.ViewBreadViewModel

@{
    ViewData["Title"] = "ViewBread";
}

<h2>@Model.Bread.Name</h2>
<hr />
<div>
    @Html.ActionLink("Weather Condition Adjustment", "Index", "Weather", new { id = Model.Bread.ID }, new { @class = "btn btn-lg btn-success" })
</div>
<br/>
<h5>Hydration: @Model.Hydration %</h5>
<hr />


<div class="row">
    <div class="col-lg-offset-5">
        <h3>Convert Your Recipe</h3>
        @Html.ActionLink("Grams", "ConvertToGrams", new { id = Model.Bread.ID }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Ounces", "ConvertToOunces", new { id = Model.Bread.ID }, new { @class = "btn btn-primary" })
    </div>
</div>
<h3><b>Ingredients</b></h3>
<hr />
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Value</th>
        <th>Unit</th>
        <th>%</th>
    </tr>
  @foreach(var item in Model.Items)
   {
    
      <tr>
          
              
                  <td>@item.RecipeIngredient.Name</td>

                  <td>@item.RecipeMeasurement.Value</td>

                  <td>@item.RecipeMeasurement.Unit</td>

                  
              
          
     </tr>

   }
    
</table>

<h4>TEST DATA PERCENTAGES</h4>
@for(var i = 0; i < Model.IngredientPercentages.Count; i++)
{
    <p>@Model.IngredientPercentages[i]</p>
}
<hr />

<h5>Totals:</h5> 
<div>
    <ul>
        @Model.TotalWeights[0] Oz
    </ul>
    <ul>
        @Model.TotalWeights[1] G
    </ul>
</div>
    
  

<hr />
<h3><b>Bake Time</b></h3>
<p>@Model.Bread.BakeTime minutes</p>
<hr />
<h3><b>Bake Temp</b></h3>
<p>@Model.Bread.BakeTemp F</p>
<hr />
<div>
    <h3><b>Fermentation Time</b></h3>
    <p>@Model.Bread.FermentTime minutes</p>
</div>
<hr />
<div>
    <h3><b>Proof Time</b></h3>
    <p>@Model.Bread.ProofTime minutes</p>
</div>
<hr />
<h3><b>Instructions</b></h3>
<p>@Model.Bread.Instructions</p>
<br />
<br />
<div>
    @Html.ActionLink("Edit", "EditBread", new { id = Model.Bread.ID  }, new {@class="btn btn-primary" }) |
    <a asp-controller="User" asp-action="UserRecipeList" class="btn btn-primary">Back to List</a>
</div>
