@model IEnumerable<BreadBuilder.Models.Bread>

@{
    ViewData["Title"] = "UserRecipeList";
}

<h2>My Bread List</h2>

<p>
    <a asp-controller="Bread" asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Instructions)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
               <a asp-controller="Bread" asp-action="ViewBread" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Name)</a>
            </td>
         
            <td>
                @Html.ActionLink("Edit", "EditBread", "Bread", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", "Bread", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
