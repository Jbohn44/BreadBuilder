@model BreadBuilder.ViewModels.AddBreadViewModel

@{
    ViewData["Title"] = "Add";
}

<script src="~/js/site.js"></script>

<h2>Add a Bread!</h2>


<hr />
<div class="row">
    <div>
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
             </div>
    

            <div id="wrapper" class="form-group">
                    <div class="col-sm-6">
                        <label asp-for="Ingredient.Name">Ingredient</label>
                        <input asp-for="Ingredient.Name" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Measurement.Value">Measurement</label>
                        <input asp-for="Measurement.Value" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Measurement.Unit">Unit</label>
                        <select asp-for="Measurement.Unit" asp-items="Model.MeasurementUnits"></select>
                    </div>

                    <div class="col-sm-6">
                        <button onclick="addInput()">Click to add Stuff</button>
                    </div>


            </div>
           
            <div>
                <label asp-for="Instructions" class="control-label"></label>
                <textarea rows="20" cols="50" asp-for="Instructions" class="form-control"></textarea>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Build" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

