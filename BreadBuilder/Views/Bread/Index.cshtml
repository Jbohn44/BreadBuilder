@model List<BreadBuilder.Models.Bread>

@{
    ViewData["Title"] = "Bread";
}

<h2>Bread</h2>

<p>
    <a asp-action="Add" asp-controller="Bread">Add A Bread</a>
</p>

@if (Model.Count == 0)
{
    <p>Nothing Yet</p>

}

    <table class="table">
     
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                
                </tr>
            }
        </tbody>
    </table>

 
