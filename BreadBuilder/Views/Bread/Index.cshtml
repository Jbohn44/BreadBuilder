@model List<BreadBuilder.Models.Bread>

@{
    ViewData["Title"] = "Bread";
}

<h2>My Recipe List</h2>



@if (Model.Count == 0)
{
    <p>Nothing Yet</p>

}

    <table class="table">
     
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                  
                    <td>
                       <a asp-controller="Bread" asp-action="ViewBread" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Add" asp-controller="Bread">Add A Bread</a>
    </p>

 
