@model BreadBuilder.ViewModels.AddBreadViewModel

@{
    ViewData["Title"] = "Add";
}

<script src="~/js/site.js"></script>

<h2>Add a Bread!</h2>


<hr />

<form asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    
    <div>
        
        <div class="row">
        <div class="col-sm-12">
            <button class="btn btn-default" onclick="addInput()">Click to Add Stuff</button>
        </div>
        <br />
        <br />
        
        <table class="table table-striped" id="wrapper">
            <tr>
                <th>Ingredient</th>
                <th>Measurement</th>
                <th>Unit</th>
            </tr>
            <tr>
                <td>
                    <input asp-for="Ingredient.Name" class="form-control" />
                </td>
                <td>   
                    <input asp-for="Measurement.Value" class="form-control" />
                </td>
                <td>
                    <select asp-for="Measurement.Unit" asp-items="Model.MeasurementUnits" class="dropdown"></select>
                </td>
            </tr>

        </table>
       
        <br />
    </div>
    </div> 
    
   
    <br />
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Instructions" class="control-label"></label>
            <textarea rows="20" cols="50" asp-for="Instructions" class="form-control"></textarea>
            <span asp-validation-for="Instructions" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" asp-action="Add" value="Build" class="btn btn-default" />
    </div>
</form>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

