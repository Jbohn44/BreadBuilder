@model List<BreadBuilder.Models.Ingredient>
@{
    ViewData["Title"] = "Ingredients";
}

<h2>Ingredients</h2>
<br />

@foreach(var item in Model)
{
    <li>
        <ul>
            @item.Name
        </ul>
    </li>

}

<br />

<a asp-controller="Ingredient" asp-action="Add">Add Another Ingredient</a>